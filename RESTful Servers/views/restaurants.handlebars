
  <body>
    <header>
      <nav>
        <h1>Restaurants</h1>
       <a href="#">CONTACT</a>
      </nav>
    </header>

    <main>
      <section class="userOptions">
        <button><i class="fas fa-1x fa-plus-square"></i>ADD RESTAURANT</button>
        {{!-- <button><i class="fas fa-1x fa-minus-square"></i>REMOVE RESTAURANT</button> --}}
      </section>
      <form class="addRestaurantForm" action="">
        <i class="fas fa-2x fa-times"></i>
        
          <label for="restaurantName">Name</label>
        <input type="text" class="inputNewRestaurant" name="restaurantName">
  
        <label for="restaurantImage">Image</label>
        <input type="text" class="inputNewRestaurant" name="restaurantImage">
        <br>
        <button type="submit" id="addRestaurantBtn">Submit</button>
        
        
    </form>
      
      <div class="container">
        <div class="search">
          <form action="" class="searchContainer">
            <input type="text" class="searchBox" placeholder="Search.." />
            <button type="submit"><i class="fa fa-search"></i></button>
          </form>
        </div>
        <div class="restContainer">
            {{#each restaurants}}
          <div class="eachRest">
              <figure>
                <div class="imgContainer">
                  <img src="{{this.image}}" width="400" height="400" alt="{{this.name}} restaurant image" />
                  <div class="middle">
                    <div class="text">
                      <a href="/restaurants/{{this.id}}">Full Detail List</a>
                    </div>
                  </div>
                </div>
                <figcaption>
                  <a href="#"> {{this.name}} </a>
                </figcaption>
              </figure>
          </div>
            {{/each}}

        </div>
      </div>
    </main>

    <footer>
      Made with &hearts; By
      <a href="https://github.com/AyishaAlli" target="_blank"></a>
      Ayisha Alli.
    </footer>
       <script src="js/restaurants.js"></script> 

  </body>
