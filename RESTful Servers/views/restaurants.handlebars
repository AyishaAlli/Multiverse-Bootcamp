<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restaurants</title>
    <link rel="stylesheet" href="css/style.css" />
    <script src="https://kit.fontawesome.com/97364d0a43.js"crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
  </head>

  <body>
    

    <main>
      <section class="userOptions">
        <button><i class="fas fa-1x fa-plus-square"></i>ADD RESTAURANT</button>
        <button><i class="fas fa-1x fa-minus-square"></i>REMOVE RESTAURANT</button>
      </section>
      <div class="container">
        <div class="search">
          <form action="" class="searchContainer">
            <input type="text" placeholder="Search.." />
            <button type="submit"><i class="fa fa-search"></i></button>
          </form>
        </div>
        <div class="restContainer">
            {{#each restaurants}}
          <div class="eachRest">
              <figure>
                <div class="imgContainer">
                  <img src="{{this.image}}" width="400" height="400" alt="{{this.name}} restaurant image" />
                  <div class="middle">
                    <div class="text">
                      <a href="/restaurants/{{this.id}}">Full Detail List</a>
                    </div>
                  </div>
                </div>
                <figcaption>
                  <a href="#"> {{this.name}} </a>
                </figcaption>
              </figure>
          </div>
            {{/each}}

        </div>
      </div>
    </main>

    <footer>
      Made with &hearts; By
      <a href="https://github.com/AyishaAlli" target="_blank"></a>
      Ayisha Alli.
    </footer>

  </body>
</html>